  <style>
    h1 {
        text-align: center;
        font-family: 'Helvetica Neue', sans-serif;
        color: #333;
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: 'Helvetica Neue', sans-serif;
        background-color: #f4f4f4;
    }

    .signup-page {
        max-width: 500px;
        margin: 20px auto;
        background-color: #ffffff;
        padding: 50px;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .signup-page:hover {
            transform: scale(1.02);
        }

        .signup-page h1 {
            color: #460744;
            margin-bottom: 20px;
            text-align: center;
            font-size: 28px;
        }

    .form-label {
        font-weight: bold;
        color: #555;
    }

    .form-input,
    .form-input-email,
    .form-input-phone,
    .form-input-address {
        width: 100%;
        padding: 12px;
        margin-bottom: 20px;
        border: 2px solid #3498db;
        border-radius: 8px;
        box-sizing: border-box;
        transition: border-color 0.3s ease-in-out;
    }

        .form-input:focus,
        .form-input-email:focus,
        .form-input-phone:focus,
        .form-input-address:focus {
            border-color: #007bff;
        }

    button {
        background-color: #3498db;
        color: #fff;
        padding: 15px 25px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

        button:hover {
            background-color: #217dbb;
            transform: translateY(-3px);
        }

    .data {
        max-width: 400px;
        margin: auto;
        text-align: center;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .data h3 {
            color: #3498db;
            padding:30px;
        }

        .data p {
            color: #555;
            font-size: 16px;
            line-height: 1.5;
        }

        /* Optional: Add some styling for a button or input fields if needed */
        .data button {
            background-color: #3498db;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .data input {
            width: 100%;
            padding: 30px;
            margin: 8px 0;
            box-sizing: border-box;
        }

    div.full {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

    </style>



