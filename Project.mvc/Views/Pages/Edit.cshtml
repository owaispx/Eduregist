
@{
}
@model Intern
<style>
   
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
    }

    
    h2 {
        color: #333;
        text-align:center;
        margin:40px;
        
    }

    
    form {
        max-width: 400px;
        margin: 0 auto;
        background: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    
    .form-group {
        margin-bottom: 20px;
    }

    
    label {
        display: block;
        margin-bottom: 5px;
        color: #333;
    }

   
    input {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    
    button {
        background-color: #007bff;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        
        button:hover {
            background-color: #0056b3;
        }

</style>
<h2>Edit Intern</h2>

<form  method="post">
    <input type="text" asp-for="Id" name="Id" disabled />

    <div>
        <label for="Name">Name:</label>
        <input type="text" name="Name" asp-for="Name" id="Name" required>
    </div>

    <div>
        <label for="Email">Email:</label>
        <input type="email" name="Email" asp-for="Email" id="Email" required>
    </div>

    <div>
        <label for="Phone">Phone:</label>
        <input type="number" name="Phone" asp-for="Phone" id="Phone">
    </div>

    <div>
        <label for="Address">Address:</label>
        <input type="text" name="Address" asp-for="Address" id="Address">
    </div>

    <button type="submit">Save</button>
</form> 

